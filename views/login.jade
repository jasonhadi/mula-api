extends layout

block content
    h1.
        #{title}
    form#formLogin(name="login",method="post",action="/login")
        p Username: 
            input#inputUsername(type="text", placeholder="ex. jhadi", name="username")
        p Password: 
            input#inputPassword(type="password" name="password")
        p
            button#btnSubmit(type="submit") submit
